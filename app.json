{
  "expo": {
    "name": "TodoList App",
    "description": "Tutorial ReactNative OpenWebinars - ToDo List App",
    "slug": "TodoListApp",
    "privacy": "public",
    "sdkVersion": "32.0.0",
    "platforms": ["ios", "android"],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "android": {
      "package": "com.ajimenez.react-native-todo",
      "versionCode": 1,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "splash": {
        "image": "./assets/splash.png",
        "resizeMode": "contain",
        "backgroundColor": "#ffffff"
      }
    },
    "ios": {
      "bundleIdentifier": "com.ajimenez.react-native-todo",
      "buildNumber": "1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Permite acceder a su posicion, para a√±adirla en la tarea",
        "NSPhotoLibraryUsageDescription": "Permite acceder a tu biblioteca de imagenes para adjuntarla en las tareas"
      },
      "supportsTablet": true
    }
  }
}
